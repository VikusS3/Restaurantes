---
interface Props {
  img: string;
  title: string;
  description: string;
}

const { img, title, description } = Astro.props;
---

<div class="max-w-xl h-[300px] flex flex-col justify-center items-center gap-5">
  <div class="w-full h-1/3 flex items-center justify-center">
    <img class="rounded-t-lg" src={img} alt="" />
  </div>
  <div class="flex flex-col items-center justify-center mt-7">
    <h1
      class="mb-2 text-2xl font-semibold tracking-tight text-gray-900 dark:text-white"
    >
      {title}
    </h1>

    <p class="mb-3 font-normal text-gray-700 dark:text-gray-400">
      {description}
    </p>
  </div>
</div>
