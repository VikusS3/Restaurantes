---
import {info} from '@data'

const {sobre_nosotros} = info
---

<section class="w-full mt-40 flex flex-row justify-around items-center px-2" id="About">
    <div class="flex flex-col gap-5 items-start">
        <h1 class="text-4xl font-semibold mb-7">
            Sobre Nosotros
           </h1>
           <p class="max-w-lg text-secondary text-xl mb-4">
            {sobre_nosotros}
           </p>
           <button class="rounded-lg bg-button py-4 px-6 text-xl">
            Conoce Mas
           </button>
    </div>
    <img src="/about-img.webp" alt="Imagen de una pizza ">
</section>